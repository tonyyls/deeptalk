# GitHub OAuth2配置
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=https://your-domain.vercel.app/api/auth/callback

# JWT配置
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters
JWT_EXPIRES_IN=7d

# GLM-4.6 AI服务配置
GLM_API_KEY=your_glm_api_key
GLM_API_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions

# KV存储配置
# 选择存储类型: 'vercel' 或 'redis'
KV_TYPE=vercel

# Vercel KV存储配置（当KV_TYPE=vercel时使用）
KV_REST_API_URL=https://your-kv-instance.upstash.io
KV_REST_API_TOKEN=your_kv_rest_api_token

# Redis存储配置（当KV_TYPE=redis时使用）
# 方式1: 使用Redis URL（推荐，支持Upstash、Railway、Render等）
REDIS_URL=redis://default:password@your-redis-host:6379

# 方式2: 使用分离的配置参数（适用于Redis Cloud、阿里云、腾讯云等）
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_USERNAME=default
REDIS_TLS=false

# Redis预设类型（可选，用于自动配置优化）
# 可选值: upstash, redisCloud, elasticache, aliyun, tencent, selfHosted, railway, render
REDIS_PRESET=upstash

# 应用配置
APP_NAME=DeepTalk
APP_DESCRIPTION=基于GLM-4.6的智能聊天应用
APP_URL=https://your-domain.vercel.app

# 功能开关
ENABLE_REGISTRATION=true
ENABLE_CHAT_HISTORY=true
ENABLE_USER_SETTINGS=true

# 限制配置
MAX_MESSAGE_LENGTH=4000
MAX_CONVERSATIONS_PER_USER=50
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# 日志配置
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false